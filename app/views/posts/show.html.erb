<div class="container-fluid">
  <!-- navbar -->
  <%= render 'shared/navbar' %>
  <hr />
  <div class="row">
    <h3 class="text-center font-weight-bold" style="font-size: 30px;">
      <%= @post.title %>
    </h3>
  </div>
  <div class="row">
    <p class="text-center" style="font-size: 30px;">
      <%= @post.content %>
    </p>
  </div>
  <div class="row">
    <p class="text-center" style="font-size: 30px;">
      <%= @post.url %>
    </p>
  </div>
  <div class="row">
    <%= image_tag @post.image.url, :size =>'100x100' if @post.image? %>
  </div>
  <div class="row mt-5">
    <%= link_to "Tweet", "https://twitter.com/intent/tweet?text="+u("#{@post.content}\n")+"&url="+u("#{@post.url}"), :class => "btn btn-info" %>
  </div>
</div>
